//- Date
	Usage: +date()
mixin date()
	-function prettyDate(){
		//if it's already a date object and not a string you don't need this line:
		-var date = new Date();
		-var d = date.getDate();
		-var monthNames = [ "Januar", "Febuary", "March", "April", "May", "June","July", "August", "September", "October", "November", "December" ];
		-var m = monthNames[date.getMonth()];
		-var y = date.getFullYear();
		-return d+' '+m+' '+y;
	-}
	span #{prettyDate()}

//- Coyright
	Usage: +copyright()
mixin copyright(text)
	span &copy; #{new Date().getFullYear()} #{text} 

