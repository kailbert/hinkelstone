//- YouTube Embed
	Usage: +youtube("DLzxrzFCyOs", "4x3")
mixin youtube(id)
	.video-embed
		iframe(src="https://www.youtube.com/embed/" + id frameborder="0" allowfullscreen)
mixin vimeo(id)
	.video-embed
		iframe(src="https://player.vimeo.com/video/" + id + "?autoplay=1&color=fec52e&title=0&byline=0&portrait=0" frameborder="0" allowfullscreen)
